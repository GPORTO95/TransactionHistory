@model IEnumerable<WebApplication.Models.TransactionModel>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center mt-4">
    <i class="fas fa-comment-dollar text-success"></i>Transaction History
</h3>

<p class="text-right">
    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Transaction", null, Context.Request.Scheme)', 'New Transaction')" class="text-white btn btn-success btn-sm"><i class="fas fa-random"></i> New transaction</a>
</p>

<div id="view-all">
    @await Html.PartialAsync("_ViewAll", Model)
</div>

